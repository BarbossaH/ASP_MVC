@model Category


<div class="card shadow border-0 m4-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Create Category</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary">Edit Category</h2>
                    <hr />
                </div>
                @*this will show every error*@
                @*<div asp-validation-summary="None"></div>*@
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">

                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2">Display Order</label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>


                <div class="row">
                    @*<div class="col-6 col-md-3">*@
                    <div class="col-6 ">
                        <button type="submit" class="btn btn-primary form-control">Update</button>

                    </div>
                    @*<div class="mb-3 p-1 mt-3 row">*@
                    <div class="col-6 ">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>

                    </div>
                </div>
            </div>

        </form>

    </div>

</div>

@* if the validation is set up in model file, the following code will check the validation in the client end *@
@*but if the validation add model error in controller, it doesn't work*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}