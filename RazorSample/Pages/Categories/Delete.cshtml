@page
@model RazorSample.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="SingleCategory.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3 mt-3 p-1 row">
            <label asp-for="SingleCategory.Name" class="p-0"></label>
            <input asp-for="SingleCategory.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 p-1 mt-3 row">
            <label asp-for="SingleCategory.DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="SingleCategory.DisplayOrder" disabled class="form-control" />

        </div>

        <div class="row">
            @*<div class="col-6 col-md-3">*@
            <div class="col-6 ">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            @*<div class="mb-3 p-1 mt-3 row">*@
            <div class="col-6 ">
                <a asp-page="/categories/index" class="btn btn-outline-secondary border form-control">Back to List</a>

            </div>
        </div>
    </div>

</form>

